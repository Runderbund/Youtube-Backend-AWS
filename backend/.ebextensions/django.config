option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: backend.drf_jwt_backend.wsgi:application
  aws:elasticbeanstalk:application:environment:
    DJANGO_SETTINGS_MODULE: backend.drf_jwt_backend.settings
    PYTHONPATH: $PYTHONPATH

packages:  
  yum:  
    python3-devel: []
    mariadb105-devel.x86_64: []

commands:
  01_update:
    command: "dnf -y update"

container_commands:
  01_activate_env:
    command: "source /var/app/venv/*/bin/activate"
    cwd: "/var/app/staging"
  02_migrate:
    command: "python manage.py migrate"
    cwd: "/var/app/staging"
    leader_only: true
  03_collectstatic:
    command: "python manage.py collectstatic --noinput"
    cwd: "/var/app/staging"
